<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="230dp"
    android:maxWidth="350dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/oceanBlue">

                <ImageView
                    android:id="@+id/groupIcon"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_group_white" android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/group_name"
                    android:textSize="18sp"
                    android:textColor="#FFF"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/bookIcon"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_book_name" android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/bookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/book_name"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/completion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="70dp"
                android:text="@string/number_of_chapters_completed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dueDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="70dp"
                android:text="Chapter 13 due 11/19/17"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/adminEmail"
                android:weightSum="5"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/adminIcon"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_email"
                    android:padding="10dp"
                    android:src="@drawable/ic_email"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp" android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/adminName"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:padding="10dp"
                    android:text="@string/admin_name"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:background="@drawable/rounded_corners_text_view"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"/>
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>